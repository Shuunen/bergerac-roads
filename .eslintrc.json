{
  "env": {
    "browser": true,
    "node": true
  },
  "extends": [
    "@nuxtjs",
    "plugin:nuxt/recommended"
  ],
  "globals": {
    "$nuxt": false
  },
  "parserOptions": {
    "parser": "babel-eslint"
  },
  "root": true,
  "rules": {
    "block-spacing": "error",
    "brace-style": "error",
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "keyword-spacing": [
      "error",
      {
        "after": true,
        "before": true
      }
    ],
    "no-console": "off",
    "no-irregular-whitespace": "error",
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "never"
    ],
    "space-before-blocks": [
      "error",
      "always"
    ],
    "space-before-function-paren": [
      "error",
      "never"
    ],
    "space-infix-ops": "error",
    "space-unary-ops": "error",
    "spaced-comment": [
      "error",
      "always"
    ],
    "vue/attributes-order": "off",
    "vue/max-attributes-per-line": "off",
    "yoda": "error"
  }
}
